{
  "name": "Scratch Expression Analyser",
  "description": "Find expressions in your Scratch workspace, analyze them, and learn!",
  
  "version": "0.1",
  "manifest_version": 3,

  "icons": {
    "16": "./logos/logo16.png",
    "32": "./logos/logo32.png",
    "48": "./logos/logo48.png",
    "128": "./logos/logo128.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "permissions": [
    "storage",
    "scripting",
    "declarativeNetRequest"
  ],

  "declarative_net_request": {
    "rule_resources": [{
      "id": "redirects",
      "enabled": true,
      "path": "redirects.json"
    }]
  },

  "host_permissions": [
    "*://scratch.mit.edu/*"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "./logos/logo16.png",
      "32": "./logos/logo32.png",
      "48": "./logos/logo48.png",
      "128": "./logos/logo128.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["*://scratch.mit.edu/*"],
      "js": ["inject.js"],
      "all_frames": true
    }
  ],


  "web_accessible_resources": [
    {
      "resources": ["content.js", "modified.common.bundle.js"],
      "matches": ["*://scratch.mit.edu/*"]
    }
  ]
}
